@model IEnumerable<restaurant_system.Models.Customer>
@{
    ViewData["Title"] = "Home Page1";
    int pageCount = 1;
}
<h1>
    Customers List
</h1>
<br>
<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#confirm-add">Create</button>
<br>
<br>
<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">№</th>
            <th scope="col">Firstname</th>
            <th scope="col">Lastname</th>
            <th scope="col">Phone</th>
            <th scope="col"></th>
        </tr>
    </thead>
    @foreach (var item in Model)
    {
        <tbody>
            <tr id="row-@item.CustomerId">
                <td>@item.CustomerId</td>
                <td>@item.Firstname</td>
                <td>@item.Lastname</td>
                <td>@item.Phone</td>
                <td>
                    <button onclick="SetEditId(@item.CustomerId)" type="button" class="btn btn-outline-primary" data-toggle="modal" data-target="#confirm-edit">Edit</button>
                    <button onclick="SetDeleteId(@item.CustomerId)" type="button" class="btn btn-outline-primary" data-toggle="modal" data-target="#confirm-delete">Delete</button>
                </td>

            </tr>
        </tbody>
    }
</table>



@{await Html.RenderPartialAsync("CustomersAddPartial");}
@{await Html.RenderPartialAsync("DeleteConfirmPartial");}
@{await Html.RenderPartialAsync("CustomersEditPartial");}
@{await Html.RenderPartialAsync("PaginationPartial", new { PageCount = ViewBag.PageCount, CurrentPage = ViewBag.CurrentPage });}