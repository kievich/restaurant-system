<div class="modal fade" id="confirm-OrderDish-delete" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirm</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete: <span class="description"></span>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <input type="submit" onclick="DeleteDish()" id="modal-delete-button" value="Delete" class="btn btn-primary" />
            </div>
        </div>
    </div>
</div>

<script>
    var OrderDishId;

    function SetOrderDishId(id) {
        OrderDishId = id;
    }

    function DeleteDish() {
        $.ajax({
            type: "POST",
            url: "/DeleteOrderDish",
            data: {
                id: OrderDishId
            },
            success: function (data) {
                document.location.reload();
            }
        })
    }

    function ChangeCount(OrderDishId, Count) {
        $.ajax({
            type: "POST",
            url: "/ChangeOrderDishCount",
            data: {
                orderDishId: OrderDishId,
                count: Count
            },
            success: function (data) {
                document.location.reload();
            }
        })
    }

</script>
