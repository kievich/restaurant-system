<div class="modal fade" id="confirm-changestatus" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirm</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Are you sure you change order status <span class="description"></span>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <input type="submit" onclick="ChangeStatus()" id="modal-delete-button" value="Change" class="btn btn-primary" />
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="confirm-deleteorder" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirm</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Are you sure you delete order?<span class="description"></span>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <input type="submit" onclick="DeleteOrder()" data-dismiss="modal"> id="modal-delete-button" value="Delete" class="btn btn-primary" />
            </div>
        </div>
    </div>
</div>

<script>
    var Status;

    function SetStatus(value) {
        Status = value;
    }

    function ChangeStatus() {
        $.ajax({
            type: "POST",
            url: "/ChangeOrderStatus",
            data: {
                id: @ViewData.Eval("OrderId"),
                status: Status
            },
            success: function (data) {
                document.location.reload();
            },
            error: function(data){
                ShowMessege("@ErrorMesseges.ErrorTitle",JSON.parse(data.responseText).Message);
            }
        })
    }

        function DeleteOrder() {
        $.ajax({
            type: "POST",
            url: "/DeleteOrder",
            data: {
                id: @ViewData.Eval("OrderId")
            },
            success: function (data) {
                document.location.href = "/orders";
            },
            error: function(data){
                ShowMessege("@ErrorMesseges.ErrorTitle",JSON.parse(data.responseText).Message);
            }
        })
    }

</script>
