@model restaurant_system.Models.RegisterViewModel
@{
    ViewData["Title"] = "Register";

}
<form method="post" asp-controller="Account" asp-action="Register">
    <div asp-validation-summary="ModelOnly"></div>
    <div>
        <label class="form-label" asp-for="Email"></label><br />
        <input class="form-control" style="max-width: 250px" asp-for="Email" />
        <span asp-validation-for="Email"></span>
    </div>
    <div>
        <label class="form-label" asp-for="Password"></label><br />
        <input class="form-control" style="max-width: 250px" asp-for="Password" />
        <span asp-validation-for="Password"></span>
    </div>
    <div>
        <label class="form-label" asp-for="PasswordConfirm"></label><br />
        <input class="form-control" style="max-width: 250px" asp-for="PasswordConfirm" />
        <span asp-validation-for="PasswordConfirm"></span>
    </div>
    <br>
    <div>
        <input class="btn btn-outline-primary" type="submit" value="Регистрация" />
    </div>
</form>